<%- include("layouts/boilerplate") %>
<title>BookHub: Error <%=err.statusCode%></title>
</head>
<style>
    div {
        display: flex;
        justify-content: center;
    }

    h1 {
        color: #800303;
        font-size: 500%;
        text-align: center;
        align-items: center;
        justify-content: center;
    }

    h2 {
        font-size: 150%;
        text-align: center;
    }
</style>

<body>
    <h1>
        <%=err.statusCode%>
    </h1>
    <div>
        <img src="https://o.remove.bg/downloads/d657f20a-bfc4-4a9a-a4a3-a348cffa1daf/pngtree-crying-little-book-illustration-image_1228018-removebg-preview.png"
            alt="">
    </div>
    <h2>
        <%=err.msg%>
    </h2>
    <% if(process.env.NODE_ENV!="production"){ %>
    <p> <%= err.stack %> </p>
    <% } %>
</body>

</html>